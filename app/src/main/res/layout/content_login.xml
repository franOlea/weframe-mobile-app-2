<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_login"
        tools:context=".LoginActivity"
        android:background="@color/ic_background_weframe_icon">

    <ImageView android:id="@+id/fullscreen_content"
               android:layout_width="337dp"
               android:layout_height="318dp"
               android:keepScreenOn="true"
               android:textColor="#33b5e5"
               android:textStyle="bold"
               android:textSize="50sp"
               android:gravity="center"
               android:contentDescription="@string/spashscreen"
               app:srcCompat="@drawable/icon"
               android:background="@color/ic_background_weframe_icon"
               android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="44dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.516"/>

    <Button
            android:text="@string/login_button"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/login_button_shape"
            android:id="@+id/login_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.305" app:layout_constraintTop_toBottomOf="@+id/fullscreen_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>